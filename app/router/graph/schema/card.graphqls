type Card {
  id: ID!
  deckId: ID!
  question: String!
  answer: String!
  createdAt: Timestamp!
  updatedAt: Timestamp!
}

extend type Query {
  cards: [Card!]!
  card: Card!
}

input CreateCardInput {
  deckId: ID!
  question: String!
  answer: String
}

type CreateCardOutput {
  card: Card @hasRole(role: USER)
}

extend type Mutation {
  createCard(input: CreateCardInput): CreateCardOutput @hasRole(role: USER)
}
